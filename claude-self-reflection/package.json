    "test:unit": "node --experimental-test test/*.test.ts",
    "test:integration": "node test/search-quality.test.ts",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
